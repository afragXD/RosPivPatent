<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/materialCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    style="@style/MyRecycle"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="11dp"
        android:paddingBottom="10dp"
        android:paddingStart="18dp"
        android:paddingEnd="1dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/recyclerMainText"
            android:textSize="16sp"
            android:text="Способ и устройство для обработки ценных ..." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/recyclerMainText"
                android:text="МПК G07D9/00  " />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/recyclerMainText"
                android:text="C2 2014.02.10  "/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Документ Ru 2507587 "
            android:textSize="10sp"
            android:textColor="@color/recyclerMainText"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="72dp"
            android:textColor="@color/recyclerMainText"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="Предположительно фальшивые ценные документы, соответственно фальшивые ценные документы, могут, но не обязательно должны..." />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>